<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Application_background_black"
    tools:context=".MainActivity_uj_jatek">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/Activity_2_imageview_ikon"
        android:background="@drawable/loim_hatter"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Activity_2_imageview_avatar"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ferfi"
        android:layout_below="@id/Activity_2_imageview_ikon"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Activity_2_button_avatar_valasztas"
        android:text="Avatar választás"
        android:textColor="@color/Text_color_white"
        android:layout_centerVertical="true"
        android:background="@drawable/gomb_style"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Activity_2_edittext_becenev"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/Text_color_white"
        android:hint="Felhasználó név"
        android:textColorHint="@color/Text_color_white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Activity_2_imageview_avatar"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/Activity_2_button_jatek_inditas"
        android:text="Játék indítása"
        android:textSize="24dp"
        android:textColor="@color/Text_color_white"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gomb_style"
        android:layout_below="@id/Activity_2_edittext_becenev"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Activity_2_button_vissza"
        android:text="Vissza"
        android:textSize="24dp"
        android:textColor="@color/Text_color_white"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/gomb_style"
        />
</RelativeLayout>